  <!-- Scripts para interactividad -->
  <script>
    // Inicializar iconos de Lucide
    lucide.createIcons();
    
    // Menú móvil
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
    
    // Demo interactivo del mapa
    const demoMap = document.getElementById('demo-map');
    const reportPanel = document.getElementById('report-panel');
    const reportLocation = document.getElementById('report-location');
    const reportCoordinates = document.getElementById('report-coordinates');
    const closeReportButton = document.getElementById('close-report');
    
    demoMap?.addEventListener('click', (e) => {
      const rect = demoMap.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      
      // Simular coordenadas de Santo Domingo
      const lat = (18.4 + (y / rect.height) * 0.2).toFixed(6);
      const lng = (-70.0 + (x / rect.width) * 0.2).toFixed(6);
      
      // Crear nuevo marcador
      const marker = document.createElement('div');
      marker.className = 'absolute w-4 h-4 bg-orange-500 rounded-full animate-ping';
      marker.style.left = x + 'px';
      marker.style.top = y + 'px';
      marker.style.transform = 'translate(-50%, -50%)';
      demoMap.appendChild(marker);
      
      // Actualizar panel
      const addresses = [
        'Zona Colonial, Santo Domingo',
        'Piantini, Santo Domingo', 
        'Malecón de Santo Domingo',
        'Los Alcarrizos',
        'Avenida 27 de Febrero'
      ];
      const randomAddress = addresses[Math.floor(Math.random() * addresses.length)];
      reportLocation.textContent = randomAddress;
      reportCoordinates.textContent = `${lat}, ${lng}`;
      reportPanel?.classList.remove('hidden');
      
      // Scroll suave al panel
      reportPanel?.scrollIntoView({ behavior: 'smooth' });
      
      // Remover animación después de 2 segundos
      setTimeout(() => {
        marker.classList.remove('animate-ping');
        marker.classList.add('animate-pulse');
      }, 2000);
    });
    
    closeReportButton?.addEventListener('click', () => {
      reportPanel?.classList.add('hidden');
    });
    
    // Navegación suave
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          // Cerrar menú móvil si está abierto
          mobileMenu?.classList.add('hidden');
        }
      });
    });
    
    // Efecto parallax sutil en hero
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const heroElements = document.querySelectorAll('.animate-float');
      heroElements.forEach((el, index) => {
        const speed = 0.5 + (index * 0.1);
        el.style.transform = `translateY(${scrolled * speed}px)`;
      });
    });
    
    // Configuración PWA
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', () => {
        navigator.serviceWorker.register('/sw.js')
          .then(registration => console.log('SW registered'))
          .catch(registrationError => console.log('SW registration failed'));
      });
    }
    
    // Prompt de instalación PWA
    let deferredPrompt;
    window.addEventListener('beforeinstallprompt', (e) => {
      e.preventDefault();
      deferredPrompt = e;
      
      // Mostrar botón de instalación personalizado
      const installButton = document.createElement('button');
      installButton.textContent = '📱 Instalar App';
      installButton.className = 'fixed bottom-4 right-4 bg-blue-600 text-white px-4 py-2 rounded-lg shadow-lg z-50 animate-bounce';
      installButton.onclick = () => {
        deferredPrompt.prompt();
        deferredPrompt.userChoice.then((choiceResult) => {
          if (choiceResult.outcome === 'accepted') {
            console.log('User accepted the install prompt');
          }
          deferredPrompt = null;
          installButton.remove();
        });
      };
      
      document.body.appendChild(installButton);
      
      // Remover después de 10 segundos si no se usa
      setTimeout(() => {
        if (installButton.parentNode) {
          installButton.remove();
        }
      }, 10000);
    });
  </script>
